---
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Layout from '../layouts/Layout.astro';
import LinkeindIcon from '../components/icon/Linkedin.astro';
import GitHubIcon from '../components/icon/GitHub.astro';
import SocialPill from '../components/icon/SocialPill.astro';
import MailIcon from '../components/icon/Mail.astro';
import Experience from '../components/Expirience.astro';
import BriefCaseIcon from '../components/icon/BriefCase.astro';
import CodeIcon from '../components/icon/Code.astro';
import Projects from '../components/Projects.astro';
import AmongIcon from '../components/icon/Among.astro';
import ImagenFoto from '../components/Imagen.astro';
import AboutMe from '../components/AboutMe.astro';
import CvIcon from '../components/icon/Cv.astro';


---

<Layout title="Portafolio de Gerald Quiñenao - Desarrollador y Programador web"
		description="Contrata a Gerald para crear tu aplicación web o móvil.">
	<main class="px-4">
	<SectionContainer class="py-44 pb-24">
	<img 
    class="rounded-full size-7 md:size-9 lg:size-12 mb-4"
    src="src/photo/ace.jpg"
    alt="thegatosamurai">
		<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row size-4p-x-4 pb-6  lg:pb-10">
			Hey, Soy Gerald <span class="pl-3"><a
			href="https://www.linkedin.com/in/geraldquinenaoi"
			target="_blank"
			rel="noopener" 
			class="flex justify-center items-center ">
				<Badge class="pl-4 text-center">Disponible para trabajar</Badge></a></span> </h1>
		<h2 class="text-2xl  text-wrap">
			<span>+1 año de experiencia. </span> <span class="opacity-90 text-yellow-300/80">
				 Desarrollador Web y Creación de Proyectos.</span> 
				<span class="opacity-90 text-sky-300/80"> De Santiago, de Chile.</span>
				<span class="opacity-75"> Especializado en Creación de aplicaciones únicas.</span>
		</h2>
			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/geraldquinenaoi">
				<LinkeindIcon class="size-4 lg:size-6   "/>Linkedin
				</SocialPill>
				<SocialPill href="https://github.com/TheGatoSamurai">
				<GitHubIcon class="size-4 lg:size-6 "/>GitHub
				</SocialPill>
				<SocialPill Link href="mailto:geraldantonio50@gmail.com">
				<CvIcon class="size-1  md:size-3 lg:size-6 "/>Descargar CV
				</SocialPill>
				<SocialPill Link href="mailto:geraldantonio50@gmail.com">
				<MailIcon class="size-1  md:size-3 lg:size-5 "/>¡Enviame un email!
				</SocialPill>
			</nav>
	</SectionContainer>
	<SectionContainer id="experiencia">
		<h2 class="text-xl  lg:text-2xl text-wrap max-w-[500px] font-semibold mb-6  flex gap-x-3 items-center">
			<BriefCaseIcon class="size-4 lg:size-7"/>
			Experiencia Laboral</h2>
		<Experience/>
	</SectionContainer>
	<SectionContainer id="proyectos" class=" py-24 pb-24 s">
		<h2 class="text-xl  lg:text-2xl text-wrap max-w-[750px] font-semibold mb-6  flex gap-x-3 items-center justify-items-center" >
			<CodeIcon class="size-4 lg:size-9"/>
			Proyectos
		</h2>
		<Projects class="flex flex-row text-wrap mx-auto "/>
	</SectionContainer>
	<SectionContainer id="sobre-mi" class="py-24 pb-24">
		<h2 class="text-xl  lg:text-2xl text-wrap max-w-[500px] font-semibold mb-6  flex gap-x-3 items-center" >
			<AmongIcon class="size-4 lg:size-9"/>
			Sobre mí
		</h2>
		<span class="content-center items-center">
		<ImagenFoto />
		</span>
		<AboutMe/>
	</SectionContainer>

	</main>
</Layout>