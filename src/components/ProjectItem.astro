---
export interface Props {
  title_es?: string;
  title_en?: string;
  description_es?: string;
  description_en?: string;
  image: string;
  tags: {
    name: string;
    class: string;
    icon: any;
  }[];
  link?: string;
}
const { title_es, title_en, description_es, description_en, image, tags, link} = Astro.props;
---

<container class="gap-3 order-first justify-start py-2 flex mx-3 flex-wrap flex-row ">
  <div class="mx-2 shadow-xl shadow-purple-800/30 text-wrap flex flex-col overflow-hidden gap-3 rounded-2xl max-w-sm w-full bg-gradient bg-gradient-to-l from-purple-600/50 to-blue-800/40 bg-clip-padding">
    <a href={link}>
      <img class="object-cover w-full h-40 rounded-t-lg blur-[0.3px]" src={image} alt={title_es ?? title_en ?? 'Project'} />
    </a>
    <div class="px-4 py-2 flex flex-col items-center w-full">
      <a href={link}>
        <h2 class="text-2xl tracking-tight opacity-90 font-semibold text-yellow-400 text-center w-full">
          <span data-lang="es">{title_es}</span>
          <span data-lang="en">{title_en}</span>
        </h2>
      </a>
      <p class="mb-3 font-sans text-pretty text-gray-300 text-center w-full">
        <span data-lang="es">{description_es}</span>
        <span data-lang="en">{description_en}</span>
      </p>
      <div class="gap-1 flex flex-wrap justify-center w-full">
        {tags.map(tag => (
          <div class={`relative px-1.5 py-1 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0 ${tag.class}`}>
            <tag.icon class="mr-1" /> {tag.name}
          </div>
        ))}
      </div>
    </div>
  </div>
</container>