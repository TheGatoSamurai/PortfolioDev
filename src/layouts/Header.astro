<script>
    // Sync visibility of elements that use data-lang with document.documentElement.dataset.lang
    (function(){
        const root = document.documentElement;
        function applyLang(){
            const lang = root.dataset.lang || 'es';
            document.querySelectorAll('[data-lang]').forEach(el => {
                el.classList.toggle('hidden', el.getAttribute('data-lang') !== lang);
            });
        }
        applyLang();
        const obs = new MutationObserver(() => applyLang());
        obs.observe(root, { attributes: true, attributeFilter: ['data-lang'] });
        document.addEventListener('DOMContentLoaded', applyLang);
    })();
</script>